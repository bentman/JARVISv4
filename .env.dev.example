# Development Environment Configuration for JARVISv4
# Ported from reference/JARVISv2_ref/.env.dev.example

# SECURITY SETTINGS (Insecure for Dev)
SECRET_KEY=dev_secret_key_only_not_for_prod
PRIVACY_SALT=dev_salt_only

# Environment
ENV=development
LOG_LEVEL=DEBUG
RELOAD=true

# Database & Redis
DATABASE_URL=sqlite:///./data/JARVISv4_dev.db
REDIS_URL=redis://localhost:6379/0

# Model Configuration
LOCAL_MODEL=false
LOCAL_MODEL_PATH=/models
LLM_BASE_URL=http://localhost:11434/v1
LLM_MODEL_NAME=llama3.1:8b

